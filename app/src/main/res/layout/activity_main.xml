<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-3240440200013091/4844228723"></com.google.android.gms.ads.AdView>

    <TextView
        android:id="@+id/comIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="start"
        android:gravity="end"
        android:padding="10dp"
        android:singleLine="true"
        android:text=""
        android:textSize="50sp" />

    <TextView
        android:id="@+id/comOut"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text=""
        android:textSize="60sp"
        android:ellipsize="start"
        android:gravity="end"
        android:singleLine="true"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/comClear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:stateListAnimator="@null"
                android:text="C"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:id="@+id/comleft"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:stateListAnimator="@null"
                android:text="("
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:id="@+id/comright"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:stateListAnimator="@null"
                android:text=")"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:id="@+id/comDiv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:stateListAnimator="@null"
                android:text="/"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/com1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:stateListAnimator="@null"
                android:text="1"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:id="@+id/com2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:stateListAnimator="@null"
                android:text="2"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:id="@+id/com3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:stateListAnimator="@null"
                android:text="3"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:id="@+id/comMulti"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:stateListAnimator="@null"
                android:text="x"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/com4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:stateListAnimator="@null"
                android:text="4"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:id="@+id/com5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:stateListAnimator="@null"
                android:text="5"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:id="@+id/com6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:stateListAnimator="@null"
                android:text="6"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:id="@+id/comPlus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:stateListAnimator="@null"
                android:text="+"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/com7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:stateListAnimator="@null"
                android:text="7"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:id="@+id/com8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:stateListAnimator="@null"
                android:text="8"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:id="@+id/com9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:stateListAnimator="@null"
                android:text="9"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:id="@+id/comMinus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:stateListAnimator="@null"
                android:text="-"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/com00"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:stateListAnimator="@null"
                android:text="00"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:id="@+id/com0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:stateListAnimator="@null"
                android:text="0"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:id="@+id/comDot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:stateListAnimator="@null"
                android:text="."
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:id="@+id/comEqual"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:stateListAnimator="@null"
                android:text="="
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark" />


        </LinearLayout>


    </LinearLayout>





</LinearLayout>